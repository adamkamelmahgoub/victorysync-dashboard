{
  "version": 2,
  "buildCommand": "npm run build --prefix client",
  "outputDirectory": "client/dist",
  "framework": "vite",
  
  "regions": ["bom1"],
  "routes": [
    {
      "src": "^/api/(.*)",
      "dest": "https://api.victorysync.com/$1",
      "headers": {
        "Access-Control-Allow-Origin": "*"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
