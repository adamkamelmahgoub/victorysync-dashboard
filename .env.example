# VictorySync Dashboard - Environment Configuration
# Copy this file to .env and fill in your values

# Node environment
NODE_ENV=production

# Application port
APP_PORT=4000

# API configuration
VITE_API_BASE_URL=http://localhost:4000
API_BASE_URL=http://localhost:4000

# Supabase configuration (required)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-key-here

# MightyCall integration
MIGHTYCALL_API_KEY=your-mightycall-api-key
MIGHTYCALL_API_BASE_URL=https://api.mightycall.com

# Database (if using direct Postgres connection)
DATABASE_URL=postgresql://user:password@localhost:5432/victorysync

# Logging
LOG_LEVEL=info

# Feature flags
ENABLE_SMS=true
ENABLE_RECORDINGS=true
ENABLE_BILLING=true
ENABLE_ADMIN_FEATURES=true

# Development
VITE_DEV_ADMIN_ID=
NODE_DEV_MODE=false
